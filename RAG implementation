        "expected_urgency": "Non-urgent"
    },
    {
        "id": "case_003",
        "symptoms": "Cut on hand while cooking, bleeding controlled with pressure, but may need stitches.",
        "history": "No significant medical history.",
        "expected_urgency": "Urgent"
    }
]

# Initialize evaluator
